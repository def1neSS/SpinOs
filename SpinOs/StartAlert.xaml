<Window x:Class="SpinOs.StartAlert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpinOs"
        mc:Ignorable="d"
        Title="StartAlert" Height="120" Width="200" WindowStyle="ToolWindow" Background="LightSteelBlue" WindowStartupLocation="CenterOwner">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Вы хотите начать сначала?" FontSize="14" FontFamily="Consolas" FontWeight="Bold" VerticalAlignment="Center"/>

        <Button x:Name="yes_startalert" Grid.Row="1" Grid.Column="0" Content="Да" FontSize="18" FontFamily="Consolas" FontWeight="Bold" BorderThickness="3" Margin="3" Click="yes_startalert_fun"/>
        <Button x:Name="no_startalert" Grid.Row="1" Grid.Column="1" Content="Нет" FontSize="18" FontFamily="Consolas" FontWeight="Bold" BorderThickness="3" Margin="3" Click="no_startalert_fun"/>
    </Grid>
</Window>
